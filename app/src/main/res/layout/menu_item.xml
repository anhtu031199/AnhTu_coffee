<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"

>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="5dp"
android:id="@+id/item_menu"
        android:background="@drawable/custom_btn_home"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_item_menu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:src="@drawable/menu1" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="3"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.2"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_tenhang_menu"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Tên hàng"
                    android:textColor="#000"
                    android:textSize="24sp" />


            </LinearLayout>

            <TextView
                android:id="@+id/txt_gia_menu"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Giá"
                android:textColor="#000"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/txt_khuyenmai_menu"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Khuyến mãi"
                android:textColor="#000"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/txt_thanhphan_menu"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="thành phần"
                android:textColor="#000"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/txt_linkAnh_menu"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="Link Anh"
                android:textColor="#000"
                android:textSize="22sp" />

        </LinearLayout>

    </LinearLayout>


</layout>