<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/custom_bg_home"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:background="#c97e3a"
                android:fontFamily="@font/bungeevn"
                android:gravity="center"
                android:text="Menu"
                android:textColor="#000"
                android:textSize="28sp" />

            <ImageView
                android:id="@+id/btn_search_hang"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="22dp"
                android:layout_marginBottom="22dp"
                android:src="@drawable/search1" />

            <RelativeLayout
                android:id="@+id/btn_cart"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:src="@drawable/cart1" />

                <TextView
                    android:id="@+id/tong_so_luong"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_margin="10dp"
                    android:background="@drawable/custom_cart_btn"
                    android:gravity="center"
                    android:minWidth="20dp"
                    android:text="0"
                    android:textColor="#000"
                    android:textSize="12sp" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/txt_search_hang"

                android:layout_width="match_parent"
                android:layout_height="50dp"

                android:layout_margin="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/custom_add_table_btn"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_search_hang"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="8"
                    android:background="@drawable/custom_add_table_btn"
                    android:hint="@string/search"

                    android:textColor="#000" />

                <ImageView
                    android:id="@+id/btn_search_gone"
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:src="@drawable/ic_baseline_cancel_24" />

            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ListView
                android:id="@+id/lv_hang"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:layout_weight="9"
                android:divider="@null"
                android:dividerHeight="5dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:text="@string/table"
                    android:textColor="#000"
                    android:textSize="22sp" />

                <Spinner

                    android:id="@+id/cbb_ban"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:background="@drawable/custom_btn_home" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:text="@string/total"
                    android:textColor="#000"
                    android:textSize="26sp" />

                <TextView
                    android:id="@+id/txt_tongtien"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:text="0Ä‘"
                    android:textColor="#000"
                    android:textSize="26sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/btn_banhang"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/custom_add_table_btn"
                android:gravity="center"
                android:text="@string/done"
                android:textColor="#000"
                android:textSize="23sp" />
        </LinearLayout>

    </LinearLayout>
</layout>